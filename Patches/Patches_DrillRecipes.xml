<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <Operations>
      <li Class="PatchOperationTest">
      <xpath>*/ThingDef[defName="CAL_Aluminum"]</xpath>
      <!-- <success>Invert</success> -->
    </li>
    <li Class="PatchOperationAdd">
      <xpath>*/ThingDef[defName="DrillRigIndustrial"]/recipes</xpath>
        <value>
          <li>DrillAluminum</li>
          <li>DrillTin</li>
        </value>
    </li>
    <li Class="PatchOperationAdd">
      <xpath>*/RecipeDef[defName="DrillAluminum"]/products</xpath>
        <value>
          <CAL_Aluminum>10</CAL_Aluminum>
        </value>
    </li>
    <li Class="PatchOperationAdd">
      <xpath>*/RecipeDef[defName="DrillTin"]/products</xpath>
        <value>
          <EXP_Tin>10</EXP_Tin>
        </value>
    </li>
    </Operations>
  </Operation>

  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <Operations>
      <li Class="PatchOperationTest">
      <xpath>*/ThingDef[defName="EXP_Copper"]</xpath>
      <!-- <success>Invert</success> -->
    </li>
    <li Class="PatchOperationAdd">
      <xpath>*/ThingDef[defName="DrillRigIndustrial"]/recipes</xpath>
        <value>
          <li>DrillLead</li>
          <li>DrillCopper</li>
        </value>
    </li>
    <li Class="PatchOperationAdd">
      <xpath>*/RecipeDef[defName="DrillLead"]/products</xpath>
        <value>
          <EXP_Lead>10</EXP_Lead>
        </value>
    </li>
    <li Class="PatchOperationAdd">
      <xpath>*/RecipeDef[defName="DrillCopper"]/products</xpath>
        <value>
          <EXP_Copper>10</EXP_Copper>
        </value>
    </li>
    </Operations>
  </Operation>

</Patch>