			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[DefName="TableRugMaking"]</xpath>
				<value>
					<costStuffCount>125</costStuffCount>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[DefName="TableRugMaking"]/CostList</xpath>
				<value>
					<CostList>
						<Steel>25</Steel>
					</CostList>
				</value>
			</li>
		</Operations>
	</Operation>

