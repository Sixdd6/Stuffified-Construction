				<xpath>*/ThingDef[defName="EXP_Lead"]/thingCategories[li="CAL_Metals"]</xpath>
			</li>
		</Operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<Operations>
			<li Class="PatchOperationTest">
				<xpath>*/ThingDef[defName="EXP_Tin"]</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>*/ThingDef[defName="EXP_Tin"]/thingCategories</xpath>
				<value>
