<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<Operations>
			<li Class="PatchOperationTest">
				<xpath>*/ThingDef[DefName="SingularityAugmentation"]</xpath>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[DefName="SingularityAugmentation"]/label</xpath>
				<value>
					<label>Mass Storage Platform</label>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[DefName="SingularityAugmentation"]</xpath>
				<value>
					<stuffCategories>
						<li>Metallic</li>
					</stuffCategories>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[DefName="SingularityAugmentation"]</xpath>
				<value>
					<costStuffCount>300</costStuffCount>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[DefName="SingularityAugmentation"]/CostList</xpath>
				<value>
					<CostList>
						<Plasteel>100</Plasteel>
						<Gold>50</Gold>
						<Component>10</Component>
					</CostList>
				</value>
			</li>
		</Operations>
	</Operation>

</Patch>