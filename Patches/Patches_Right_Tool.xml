<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Pickaxe -->
	<Operation Class="PatchOperationSequence">
		<Operations>
			<li Class="PatchOperationRemove">
				<xpath>*/RecipeDef[defName="MakePickaxe"]/ingredients/li[1]/filter/ThingDefs</xpath>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>*/RecipeDef[defName="MakePickaxe"]/ingredients/li[2]/filter/ThingDefs</xpath>
			</li>
		</Operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<Operations>
			<li Class="PatchOperationAdd">
				<order>Append</order>
				<xpath>*/RecipeDef[defName="MakePickaxe"]/ingredients/li[1]/filter</xpath>
				<value>
					<categories>
						<li>Metals</li>
					</categories>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<order>Append</order>
				<xpath>*/RecipeDef[defName="MakePickaxe"]/ingredients/li[2]/filter</xpath>
				<value>
					<categories>
						<li>WoodLogs</li>
					</categories>
				</value>
			</li>
		</Operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<Operations>
			<li Class="PatchOperationRemove">
				<xpath>*/RecipeDef[defName="MakePickaxe"]/fixedIngredientFilter/ThingDefs</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<order>Append</order>
