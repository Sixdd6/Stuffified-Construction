<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>
  
  <!-- =========== Resource Recipes =========== -->
  
	<RecipeDef>
		<defName>MakeFelt</defName>
		<label>Make Felt</label>
		<description>Processes any non-synthetic fabric into Felt.</description>
		<jobString>Making felt.</jobString>
		<workAmount>400</workAmount>
		<workSpeedStat>WorkSpeedGlobal</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.05</workSkillLearnFactor>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Textiles</li>
					</categories>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<products>
			<Felt>25</Felt>
		</products>
		<recipeUsers>
			<li>HandTailoringBench</li>
			<li>ElectricTailoringBench</li>
		</recipeUsers>
		<fixedIngredientFilter>
			<categories>
				<li>PlantFabric</li>
				<li>AnimalHair</li>
				<li>Leathers</li>
			</categories>
		</fixedIngredientFilter>
	</RecipeDef>

	<RecipeDef>
		<defName>MakeCharcoal</defName>
		<label>Make Charcoal</label>
		<description>Makes charcoal from wood.</description>
		<jobString>Making charcoal.</jobString>
		<workAmount>250</workAmount>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>WoodLogs</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<Charcoal>10</Charcoal>
		</products>
		<recipeUsers>
			<li>Forge</li>
			<li>ElectricSmelter</li>
			<li>ElectricCrematorium</li>
			<li>Campfire</li>
		</recipeUsers>
		<fixedIngredientFilter>
			<categories>
				<li>WoodLogs</li>
			</categories>
		</fixedIngredientFilter>
	</RecipeDef>

	<RecipeDef>
		<defName>SpinWire</defName>
		<label>Spin Metal Wire</label>
		<description>Makes metal wire out of any metal.</description>
		<jobString>Making wire.</jobString>
		<workAmount>1000</workAmount>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>BaseMetals</li>
						<li>MetalAlloys</li>
					</categories>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<products>
			<Wire>25</Wire>
		</products>
		<recipeUsers>
			<li>FueledSmithy</li>
			<li>ElectricSmithy</li>
		</recipeUsers>
		<fixedIngredientFilter>
			<categories>
				<li>BaseMetals</li>
				<li>MetalAlloys</li>
			</categories>
		</fixedIngredientFilter>
	</RecipeDef>

  <!-- =========== Flooring Recipes =========== -->
  
