<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef ParentName="BenchBase" Name="DrillRigIndustrial">
    <defName>DrillRigIndustrial</defName>
    <label>Industrial Mining Drill</label>
    <ThingClass>Building_WorkTable_HeatPush</ThingClass>
    <Description>A computerized electric industrial drilling rig for seeking out and extracting underground minerals. Consumes a very large amount of power.</Description>
    <graphicData>
      <texPath>Things/Building/Production/DrillRig</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,3)</drawSize>
      <damageData>
        <rect>(0.3,0,5.4,6)</rect>
      </damageData>
    </graphicData>
    <CostList>
      <Steel>500</Steel>
      <Component>20</Component>
    </CostList>
    <AltitudeLayer>Building</AltitudeLayer>
    <fillPercent>1</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>400</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <Size>(3,3)</Size>
    <DesignationCategory>Production2</DesignationCategory>
    <Passability>Impassable</Passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-2)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
      <li>DrillCoal</li>
      <li>DrillSilver</li>
      <li>DrillUranium</li>
      <li>DrillGold</li>
      <li>DrillCinnabar</li>
      <li>DrillGarnet</li>
      <li>DrillPeridot</li>
      <li>DrillAmethyst</li>
      <li>DrillCitrine</li>
      <li>DrillTopaz</li>
      <li>DrillTurquoise</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>1200</basePowerConsumption>
        <startElectricalFires>true</startElectricalFires>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>10</heatPerSecond>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <building>
      <heatPerTickWhileWorking>20</heatPerTickWhileWorking>
    </building>
    <researchPrerequisites>
      <li>IndustrialDrill</li>
    </researchPrerequisites>
    <terrainAffordanceNeeded>SmoothableStone</terrainAffordanceNeeded>
  </ThingDef>

</ThingDefs>